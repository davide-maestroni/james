<FindBugsFilter>
    <Match>
        <Package name="~dm\.jail.*"/>
        <Bug pattern="SE_BAD_FIELD,SE_BAD_FIELD_STORE,SE_NO_SUITABLE_CONSTRUCTOR"/>
        <!--
        writeReplace makes objects serializable. This is a limitation of FindBugs as discussed here:
        http://stackoverflow.com/questions/26156523/is-writeobject-not-neccesary-using-the-serialization-proxy-pattern
        -->
    </Match>
    <Match>
        <Class name="dm.jail.util.TimeUnits"/>
        <Method name="~waitSince.*"/>
        <Bug pattern="WA_NOT_IN_LOOP"/>
    </Match>
    <Match>
        <Class name="dm.jail.async.FailureException"/>
        <Method name="wrapIfNot"/>
        <Bug pattern="BC_UNCONFIRMED_CAST"/>
    </Match>
    <Match>
        <Class name="dm.jail.async.RuntimeInterruptedException"/>
        <Method name="toInterruptedException"/>
        <Bug pattern="BC_UNCONFIRMED_CAST_OF_RETURN_VALUE"/>
    </Match>
    <Match>
        <Class name="dm.jail.async.RuntimeTimeoutException"/>
        <Method name="toTimeoutException"/>
        <Bug pattern="BC_UNCONFIRMED_CAST_OF_RETURN_VALUE"/>
    </Match>
    <Match>
        <Class name="dm.jail.DefaultAsyncStatement"/>
        <Method name="failure"/>
        <Bug pattern="NP_NULL_ON_SOME_PATH_FROM_RETURN_VALUE"/>
    </Match>
    <Match>
        <Class name="dm.jail.DefaultAsyncLoop"/>
        <Method name="failure"/>
        <Bug pattern="NP_NULL_ON_SOME_PATH_FROM_RETURN_VALUE"/>
    </Match>
    <Match>
        <Package name="~dm\.james.*"/>
        <Bug code="Se,SnVI,RI,Wa,BC,DLS,Eq,NP"/>
    </Match>
</FindBugsFilter>
